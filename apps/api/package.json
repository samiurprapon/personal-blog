{
	"name": "@samiurprapon/api",
	"version": "0.0.1",
	"private": true,
	"main": "src/index.ts",
	"authors": [
		{
			"name": "Samiur Prapon",
			"email": "samiur.prapon@gmail.com",
			"url": "https://prapon.io/"
		}
	],
	"scripts": {
		"release": "standard-version --dry-run",
		"lint": "eslint .",
		"typeCheck": "tsc --noEmit",
		"prebuild": "rimraf ../../dist/apps/api",
		"lint:fix": "eslint . --fix",
		"build": "swc src -d ../../dist/apps/api --source-maps --copy-files --config-file .swcrc",
		"build:tsc": "tsc && tsc-alias",
		"start": "NODE_ENV=production node ../../dist/apps/api/src/index.js",
		"start:dev": "cross-env NODE_ENV=development tsx --tsconfig ./tsconfig.json ./src/index.ts --port",
		"dev": "cross-env NODE_ENV=development nodemon",
		"typeorm": "tsx --tsconfig ./tsconfig.json ./node_modules/typeorm/cli.js"
	},
	"dependencies": {
		"@swc/helpers": "^0.5.15",
		"bcryptjs": "^2.4.3",
		"class-transformer": "^0.5.1",
		"class-validator": "^0.14.1",
		"compression": "^1.8.0",
		"cors": "^2.8.5",
		"express": "^4.21.2",
		"hpp": "^0.2.3",
		"http-status-codes": "^2.3.0",
		"ioredis": "^5.5.0",
		"jose": "^5.9.6",
		"lodash": "^4.17.21",
		"morgan": "^1.10.0",
		"pg": "^8.13.3",
		"reflect-metadata": "^0.2.2",
		"typeorm": "^0.3.20",
		"zod": "^3.24.2"
	},
	"devDependencies": {
		"@swc/cli": "^0.6.0",
		"@swc/core": "^1.11.1",
		"@types/bcryptjs": "^2.4.6",
		"@types/compression": "^1.7.5",
		"@types/cors": "^2.8.17",
		"@types/express": "^4.17.13",
		"@types/hpp": "^0.2.6",
		"@types/lodash": "^4.17.15",
		"@types/morgan": "^1.9.9",
		"eslint-config-prettier": "^10.0.1",
		"eslint-plugin-prettier": "^5.2.1",
		"nodemon": "^3.1.9",
		"tsc-alias": "^1.8.11",
		"tsx": "^4.19.3"
	}
}
